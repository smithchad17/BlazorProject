<h3>GroupDropDownComponent</h3>

<div>
<p><b>Pick a Group</b></p>
<select class="form-control">
    <option>--Select--</option>
    @foreach (var item in groups)
    {
        <option>@item</option>
    }
</select>
</div>

@code {

    List<string> groups = new List<string>()
    {
        "Math", "Chemistry", "History"
    };

}
